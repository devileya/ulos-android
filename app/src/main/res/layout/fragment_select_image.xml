<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_select_image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_image_title"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_ulos_photo"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_ulos_photo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/ic_add_image_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_ulos_photo"
        android:layout_marginTop="24dp"
        android:text="@string/submit"
        android:background="@drawable/btn_rounded"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>